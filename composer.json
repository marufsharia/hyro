{
    "name": "marufsharia/hyro",
    "description": "Enterprise-grade authorization system for Laravel",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Marufsharia\\Hyro\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Marufsharia\\Hyro\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Maruf Sharia",
            "email": "marufsharia@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "laravel/framework": "^12.0",
        "laravel/sanctum": "^4.0",
        "ramsey/uuid": "^4.0"
    },
    "require-dev": {
        "orchestra/testbench": "^9.0",
        "phpunit/phpunit": "^10.0",
        "nunomaduro/collision": "^8.0",
        "laravel/pint": "^1.0"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Marufsharia\\Hyro\\HyroServiceProvider"
            ],
            "aliases": {
                "Hyro": "Marufsharia\\Hyro\\Facades\\Hyro"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@php artisan package:discover --ansi"
        ],
        "build": [
            "@php artisan hyro:publish-assets --force",
            "npm run prod"
        ]
    }
}
