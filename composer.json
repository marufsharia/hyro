{
    "name": "marufsharia/hyro",
    "description": "Enterprise-grade authorization system for Laravel",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Marufsharia\\Hyro\\": "src/",
            "HyroPlugins\\": "hyro-plugins/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Marufsharia\\Hyro\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Maruf Sharia",
            "email": "marufsharia@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "jantinnerezo/livewire-alert": "^3.0",
        "laravel/framework": "^12.0",
        "laravel/prompts": "^0.3.13",
        "laravel/sanctum": "^4.0",
        "livewire/livewire": "^3.7.6",
        "ramsey/uuid": "^4.0",
        "wire-elements/modal": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.0",
        "laravel/pint": "^1.0"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Marufsharia\\Hyro\\HyroServiceProvider"
            ],
            "aliases": {
                "Hyro": "Marufsharia\\Hyro\\Facades\\Hyro",
                "HyroPlugin": "Marufsharia\\Hyro\\Facades\\Plugin"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "scripts": {
        "build": [
            "@php artisan hyro:publish-assets --force",
            "npm run prod"
        ]
    }
}
